<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <shape>
            <stroke android:color="@android:color/transparent" android:width="3dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/ticktockGreenPickColor" />
        </shape>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <shape>
            <stroke android:color="@color/colorCardBorder" android:width="3dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/ticktockGreenPickColor" />
        </shape>
    </item>
</selector>