<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:state_checked = "true">
        <shape android:shape="rectangle" >
            <size
                android:width="34dp"
                android:height="16dp" />
            <corners
                android:radius="13dp" />
            <solid
                android:color="#ffa7a7" />
        </shape>
    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:state_checked = "false">
        <shape android:shape="rectangle" >
            <size
                android:width="34dp"
                android:height="16dp" />
            <corners
                android:radius="13dp" />
            <solid
                android:color="#d5d5d5" />
        </shape>
    </item>
</layer-list>