<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:background = "@drawable/setting_dialog_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id = "@+id/tv_delete_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop = "24dp"
            android:layout_marginStart = "24dp"
            android:text = "@string/dialog_delete_all"
            android:textStyle = "bold"
            android:textSize = "14sp"
            android:fontFamily="@font/noto_sans_cjk_kr_bold" />

        <TextView
            android:id = "@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_delete_alarm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart = "24dp"
            android:layout_marginTop = "8dp"
            android:text = "@string/dialog_cancel"
            android:fontFamily="@font/noto_sans_cjk_kr_light"
            android:textSize = "12sp"
            android:lineSpacingExtra="4sp" />

        <ImageButton
            android:id = "@+id/btn_delete_alarm"
            android:layout_width="156dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_message"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop = "16dp"
            android:src = "@drawable/btn_setting_delete" />
        
        <ImageButton
            android:id = "@+id/btn_cancle_dialog"
            android:layout_width="156dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@+id/btn_delete_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src = "@drawable/btn_setting_cancel"/>

    </android.support.constraint.ConstraintLayout>

</layout>