<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/prepare_name_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="ex)샤워하기"
            android:textAlignment="center"
            android:layout_alignParentStart="true"/>

        <EditText
            android:id="@+id/prepare_time_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/prepare_plus_button"
            android:hint="1"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/prepare_minus_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_toStartOf="@+id/prepare_time_edit"/>

        <Button
            android:id="@+id/prepare_plus_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>
</layout>